<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Registration.Registration">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Digital Canteen"
        android:textColor="@color/textPrimaryColor"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:paddingLeft="20dp"
                android:background="@drawable/white_curve"
                android:maxLength="60"
                android:id="@+id/Email"
                android:fontFamily="@font/poppinslight"
                android:autofillHints="emailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/appBlack"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                />

            <EditText
                android:paddingLeft="20dp"
                android:fontFamily="@font/poppinslight"
                android:background="@drawable/white_curve"
                android:id="@+id/Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:maxLength="18"
                android:backgroundTint="@color/appBlack"
                android:hint="Password"
                android:inputType="text"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:fontFamily="@font/poppinslight"

                android:paddingLeft="20dp"
                android:background="@drawable/white_curve"
                android:maxLength="60"
                android:id="@+id/Fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/appBlack"
                android:hint="Full Name"
                android:inputType="text"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:fontFamily="@font/poppinslight"

                android:paddingLeft="20dp"
                android:background="@drawable/white_curve"
                android:id="@+id/Phone"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/appBlack"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
               />
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/signup"
                android:layout_width="325dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/green"
                android:background="@drawable/rounded_rectangele"
                android:text="SIGNUP"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        <ProgressBar
            android:indeterminateTint="@color/green"
            android:id="@+id/progressBarReg"
            android:layout_gravity="center_horizontal|center_vertical"
            style="?android:attr/progressBarStyle"
            android:layout_width="112dp"
            android:layout_height="89dp" />

    </FrameLayout>
</LinearLayout>



</LinearLayout>